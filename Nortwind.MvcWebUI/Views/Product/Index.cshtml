@using Nortwind.MvcWebUI.HtmlHelpers
@model Nortwind.MvcWebUI.Models.ProductListViewModel

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-10">
    <table class="table">
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.QuantityPerUnit</td>
                <td>@string.Format("{0:C}", product.UnitPrice)</td>
            </tr>

        }
        <tfoot>
            <tr>
                <td colspan="4">
                    <a href="/Product/Add" class="glyphicon glyphicon-plus"></a>
                </td>
            </tr>
        </tfoot>
    </table>


</div>
<div class="col-lg-10">

    @Html.Pager(Model.PageInfo)
</div>

